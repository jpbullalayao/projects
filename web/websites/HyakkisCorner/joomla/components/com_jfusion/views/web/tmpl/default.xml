		<param name="parse_abs_url" type="list" default="1" label="PARSE_ABS_URL" description="PARSE_ABS_URL">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="parse_abs_path" type="list" default="1" label="PARSE_ABS_PATH" description="PARSE_ABS_PATH">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="parse_rel_img" type="list" default="1" label="PARSE_REL_IMG" description="PARSE_REL_IMG">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="parse_action" type="list" default="1" label="PARSE_ACTION" description="PARSE_ACTION">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="parse_popup" type="list" default="1" label="PARSE_POPUP" description="PARSE_POPUP">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="parse_redirect" type="list" default="1" label="PARSE_REDIRECT" description="PARSE_REDIRECT">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>

		<param name="parse_css" type="list" default="1" label="PARSE_CSS" description="PARSE_CSS">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="parse_infile_css" type="list" default="1" label="PARSE_INFILE_CSS" description="PARSE_INFILE_CSS">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="default_css" type="list" default="1" label="DEFAULT_CSS" description="DEFAULT_CSS">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>

		<param name="default_css_overflow" type="list" default="visible" label="DEFAULT_CSS_OVERFLOW" description="DEFAULT_CSS_OVERFLOW">
			<option value="visible">visible</option>
			<option value="hidden">hidden</option>
			<option value="scroll">scroll</option>
			<option value="auto">auto</option>
			<option value="inherit">inherit</option>
		</param>

        <param name="headermap" default="" col1="SEARCH" col2="REPLACE" type="JFusionPair" label="HEADER_MAP" description="HEADER_MAP"/>
        <param name="bodymap" default="" col1="SEARCH" col2="REPLACE" type="JFusionPair" label="BODY_MAP" description="BODY_MAP"/>
	</params>
</metadata>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Main Content View -->

    <LinearLayout
        android:id="@+id/stastaticsAndDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/marg_md" >

        <TextView
            android:id="@+id/main_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecture"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/alertness_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="@dimen/marg_md"
            android:background="@drawable/circle_green"
            android:gravity="center_horizontal|center_vertical"
            android:text="Alertness" >
        </TextView>

        <LinearLayout
            android:id="@+id/main_alertness_graph_layout"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/marg_sm"
            android:paddingLeft="@dimen/marg_md"
            android:paddingRight="@dimen/marg_md"
            android:paddingTop="@dimen/marg_sm" >

            <TextView
                android:id="@+id/main_bar_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lecture (current)"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>
        
        <Button
            android:id="@+id/btnGoToDemo"
            style="@style/SleekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to demo screen" />

        <Button
            android:id="@+id/change_color_green_button"
            style="@style/SleekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change circle to Green" />

        <Button
            android:id="@+id/change_color_yellow_button"
            style="@style/SleekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change circle to Yellow" />

        <Button
            android:id="@+id/change_color_red_button"
            style="@style/SleekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change circle to Red" />-->
        
        
        
    </LinearLayout>

    <!-- Side Drawer Layout -->

    <ListView
        android:id="@+id/main_left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#242424"
        android:choiceMode="singleChoice"
        android:divider="#383838"
        android:dividerHeight="2dp" >
    </ListView>

</android.support.v4.widget.DrawerLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RequestDataHandler" >

    <TextView
        android:id="@+id/log_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/log_data_text" />

    <CheckBox
        android:id="@+id/log_state_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/log_data_text"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_state_box" />
    
    <CheckBox
        android:id="@+id/log_prox_1_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/log_state_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_prox_1_box" />
    
    <CheckBox
        android:id="@+id/log_prox_2_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_state_box"
        android:layout_toRightOf="@+id/log_prox_1_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_prox_2_box" />
    
    <CheckBox
        android:id="@+id/log_prox_3_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/log_prox_2_box"
        android:layout_below="@+id/log_state_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_prox_3_box" />
        
    <CheckBox
        android:id="@+id/log_ambient_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_prox_1_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_ambient_box" />
    
    <CheckBox
        android:id="@+id/log_yaw_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_ambient_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_yaw_box" />
    
    <CheckBox
        android:id="@+id/log_pitch_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/log_yaw_box"
        android:layout_below="@+id/log_ambient_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_pitch_box" />
    
    <CheckBox
        android:id="@+id/log_roll_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/log_pitch_box"
        android:layout_below="@+id/log_ambient_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_roll_box" />
    
    <CheckBox
        android:id="@+id/log_totalblinks_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_yaw_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_totalblinks_box" />
    
    <CheckBox
        android:id="@+id/log_avgbpm_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_totalblinks_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_avgbpm_box" />
    
    <CheckBox
        android:id="@+id/log_avgblinkduration_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_avgbpm_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_avgblinkduration_box" />
    
    <CheckBox
        android:id="@+id/log_recentblinkduration_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_avgblinkduration_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_recentblinkduration_box" />
    
    <CheckBox
        android:id="@+id/log_avg_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_recentblinkduration_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_avg_box" />
    
    <CheckBox
        android:id="@+id/log_perclos_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_avg_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_perclos_box" />
    
    <CheckBox
        android:id="@+id/log_idletime_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_perclos_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_idletime_box" />

    <CheckBox
        android:id="@+id/log_headtilt_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_idletime_box"
        android:onClick="onCheckboxClicked"
        android:text="@+string/log_headtilt_box" />

     <Button
            android:id="@+id/log_data_button"
            style="@style/SleekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_headtilt_box"
            android:text="@+string/log_data_button" />
    
</RelativeLayout>